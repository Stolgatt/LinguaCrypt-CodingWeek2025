<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="linguacrypt.view.LobbyView" alignment="CENTER" style="-fx-background-image: url('/image/bg-red.jpg'); -fx-background-size: cover;">
    <children>
        <VBox alignment="TOP_CENTER" spacing="10.0" prefWidth="600.0" prefHeight="600.0">
            <!-- Server Info -->
            <Label fx:id="labelServerIP" text="Private Server IP Address: X.X.X.X" textFill="WHITE" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

            <!-- User Lists -->
            <HBox spacing="20.0" alignment="CENTER">
                <VBox spacing="10.0" alignment="TOP_CENTER">
                    <Label text="Blue Team:" textFill="WHITE" />
                    <ListView fx:id="listViewBlueTeam" style="-fx-background-color: black; -fx-text-fill: white;" prefHeight="200.0" />
                </VBox>
                <VBox spacing="10.0" alignment="TOP_CENTER">
                    <Label text="Red Team:" textFill="WHITE" />
                    <ListView fx:id="listViewRedTeam" style="-fx-background-color: black; -fx-text-fill: white;" prefHeight="200.0" />
                </VBox>
            </HBox>

            <!-- Chat Section -->
            <Label text="Chat:" textFill="WHITE" />
            <ListView fx:id="listViewChat" style="-fx-background-color: black;" prefHeight="150.0" />
            <HBox spacing="10.0" alignment="CENTER">
                <TextField fx:id="textFieldChatMessage" promptText="Type your message..." prefWidth="400.0" style="-fx-background-radius: 10px; -fx-background-color: white;" />
                <Button fx:id="buttonSendMessage" text="Send" onAction="#sendMessage" style="-fx-background-color: linear-gradient(to bottom, #007bff, #0056b3); -fx-text-fill: white; -fx-background-radius: 20px;" />
            </HBox>

            <!-- Control Buttons -->
            <HBox spacing="20.0" alignment="CENTER">
                <Button fx:id="buttonStartGame" text="Start Game" onAction="#startGame" style="-fx-background-color: linear-gradient(to bottom, #28a745, #218838); -fx-text-fill: white; -fx-background-radius: 20px;" />
                <Button fx:id="buttonBack" text="Back" onAction="#goBackToMainMenu" style="-fx-background-color: linear-gradient(to bottom, #ffc107, #e0a800); -fx-text-fill: black; -fx-background-radius: 20px;" />
            </HBox>
        </VBox>
    </children>
</StackPane>
