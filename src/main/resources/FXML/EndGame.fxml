<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="linguacrypt.view.gameView.EndGameView" style="-fx-background-size: cover;" prefHeight="600.0" prefWidth="600.0">
    <center>
        <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-padding: 50; -fx-border-color: black; -fx-border-width: 2px; -fx-border-radius: 15px; -fx-background-radius: 15px;" maxWidth="400.0" maxHeight="400.0">
            <Label fx:id ="endGameTitle" text="Résumé de fin de partie" style="-fx-font-size: 20px; -fx-font-weight: bold;" textFill="#333333"  />
            <Label fx:id ="resultTitle"  style="-fx-font-size: 20px; -fx-font-weight: bold;" textFill="#333333"  />

            <GridPane hgap="20" vgap="10" alignment="CENTER" >
                <Label text="Nombre de Tour :"  GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <Label fx:id="nbTour" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Durée :" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <Label fx:id="duration"  GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Mot Restant :" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <Label fx:id="motRestant"  GridPane.rowIndex="2" GridPane.columnIndex="1" />
            </GridPane>

            <!-- Bouton -->
            <HBox spacing="20.0" alignment="CENTER">
                <Button text="Menu Principal" onAction="#goBackToMainMenu" style="-fx-background-color: #ffc107; -fx-text-fill: black; -fx-background-radius: 15px;" prefWidth="120.0" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
