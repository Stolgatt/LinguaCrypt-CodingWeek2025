<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="linguacrypt.view.gameView.SoloGameView">
    <top>
        <VBox>
            <fx:include fx:id="menuBar" source="/FXML/menuBar.fxml"/>
            <HBox alignment="CENTER" style="-fx-padding: 20;">
                <Label fx:id="labelHint" text="" />
            </HBox>
        </VBox>
    </top>

    <center>
        <GridPane fx:id="gameGrid"
                  hgap="10"
                  vgap="10"
                  alignment="CENTER">
            <!-- Everything will be added dynamically -->
        </GridPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 20;">
            <Button fx:id="btnNextTurn" text="Tour Suivant" />
            <Button fx:id="btnGuess" text="Donner l'indice" />
        </HBox>

    </bottom>
    <right>
        <VBox>
            <Label text="Time left to play:"/>
            <Label fx:id="timerLabel" text="00:00"/>
        </VBox>
    </right>
    <left>
        <VBox fx:id="motTrouve"
          spacing="10"
          alignment="CENTER">

        </VBox>
    </left>
</BorderPane>
