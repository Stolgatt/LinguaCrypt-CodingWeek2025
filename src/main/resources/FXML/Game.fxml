<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="linguacrypt.view.GameView">
    <top>
        <VBox>
            <fx:include fx:id="menuBar" source="menuBar.fxml"/>
            <HBox alignment="CENTER" style="-fx-padding: 20;">
                <Label fx:id="labelHint" text="" />
            </HBox>
        </VBox>
    </top>
        
    <center>
        <GridPane fx:id="gameGrid"
                  hgap="10"
                  vgap="10"
                  alignment="CENTER">
            <!-- Everything will be added dynamically -->
        </GridPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 20;">
            <Button fx:id="btnNextTurn" text="Tour Suivant" />
            <Button fx:id="btnGuess" text="Donner l'indice" />
        </HBox>

    </bottom>
    <right>
        <VBox>
            <Label text="Time left to play:"/>
            <Label fx:id="timerLabel" text="00:00"/>
        </VBox>
    </right>
</BorderPane>